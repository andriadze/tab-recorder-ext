{
  "name": "guidemagic",
  "displayName": "GuideMagic",
  "version": "0.0.3",
  "description": "Effortlessly record your actions and generate clear, step-by-step guides. Perfect for tutorials and onboarding!",
  "author": "guidemagic.ai. <info@guidemagic.ai>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "test": "plasmo test"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.5.0",
    "@plasmohq/storage": "^1.8.0",
    "axios": "^1.5.1",
    "plasmo": "0.83.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.0",
    "@types/chrome": "0.0.245",
    "@types/node": "20.5.9",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "3.0.3",
    "typescript": "5.2.2"
  },
  "manifest": {
    "permissions": [
      "activeTab",
      "<all_urls>"
    ],
    "host_permissions": [
      "https://*/*",
      "http://*/*",
      "<all_urls>"
    ],
    "externally_connectable": {
      "matches": [
        "https://app.guidemagic.ai//*",
        "https://guidemagic.ai//*",
        "http://localhost:3000/*",
        "http://localhost:3001/*"
      ]
    }
  }
}
